{
    "meta":
    {
        "title"     : "Culture API",
        "output"    : "activity-api",
        "author"    : "Taylor",
        "source"    : "none",
        "prefix"    : ""
    },

  	"enum":
  	{
        // 排序方式
        "SORT_ORDER": {
            "ASC": "asc",   // asc
            "DESC": "desc"  // desc
        },

        // 活动状态
        "STATUS": {
            "BOOKABLE": 1,      // 可预约
            "BOOKEDUP": 2,      // 已订满
            "HAVENT_START": 3,  // 未开始
            "FINISHED": 4       // 已结束
        },

        // 主题类型
        "ACTIVITIABLE_TYPE": {
            "ARTICLE_CATEGORY": "article_category",     // 文章分类
            "STADIUM": "stadium"                        // 场馆
        }
  	},

    "model":
    {
        // 活动对象
        "ACTIVITY": {
            "id": 1,
            "status": "<STATUS>",                           // 活动状态
            "is_free": "",                                  // 是否为免费(type: boolean[0, 1])
            "name": "",                                     // 名称
            "labels": [],                                   // 标签(s)
            "thumbnail": "",                                // 缩略图
            "banner": "",                                   // banner
            "price": "",                                    // 价格
            "address": "",                                  // 地址
            "registered_at": [],                            // 活动的开始和结束时间
            "contact": "",                                  // 咨询电话
            "details": "",                                  // 内容

            /************************************ 搜索属性 ************************************/
            "activitiable_type": "<ACTIVITIABLE_TYPE>",     // 主题类型 *仅用于搜索时使用
            "activitiable_id": ""                           // 主题ID *仅用于搜索时使用
        }
    },

    "controller":
    {
        // 获取活动(s)
        "GET /v1/activities":
        {
            "request":
            {
                "page": "1",                             // *当前页数
                "per_page": "10",                        // *每页显示的数量

                "q[attribute_name]": "",                 // 搜索
                "s[attribute_name]": "<SORT_ORDER>"      // 排序
            },
            "response":
            {
                "data": ["{ACTIVITY}"]
            }
        },

        // 获取活动
        "GET /v1/activity/:id":
        {
            "request":
            {
            },
            "response":
            {
                "data": ["{ACTIVITY}"]
            }
        }
    }
}
