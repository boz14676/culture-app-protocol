{
    "meta":
    {
        "title"     : "Culture API",
        "output"    : "stadium-api",
        "author"    : "Taylor",
        "source"    : "none",
        "prefix"    : ""
    },

  	"enum":
  	{
        // 排序方式
        "SORT_ORDER": {
            "ASC": "asc",   // asc
            "DESC": "desc"  // desc
        }
  	},

    "model":
    {
        // 文章分类 对象
        "ARTICLE_CATEGORY": {
            "id": 1,
            "topid": 0,                                     // 上级ID
            "showing_type_list": "<SHOWING_TYPE_LIST>",     // 文章列表展示类型
            "showing_type_infor": "<SHOWING_TYPE_INFOR>",   // 文章详情展示类型
            "name": "",                                     // 名称
            "icon": "",                                     // 图标
            "banner": "",                                   // banner
            "desc": "",                                     // 简介

            "is_music": 0,                                  // 是否有音乐 [type: boolean(0, 1)]
            "is_video": 0,                                  // 是否有视频 [type: boolean(0, 1)]
            "is_activity": 1,                               // 是否有预约 [type: boolean(0, 1)]

            "is_top_showing": 0                             // 是否展示在首页 [type: boolean(0, 1)] *仅用于首页展示使用
        },

        // 文化场馆 对象
        "STADIUMS": {
            "id": 1,
            "original_article_category": "{ARTICLE_CATEGORY}",  // 文章分类 对象
            "article_category_id": 1,                           // 文章分类ID
            "name": "",                                         // 名称
            "thumbnail": "",                                    // 缩略图
            "banner": "",                                       // banner（包含：背景图）
            "labels": [],                                       // 标签

            "opening_hours": "",                                // 营业时间
            "contact": "",                                      // 联系方式
            "transport": "",                                    // 公共交通

            "lat": "116.421516,",                               // 坐标精度
            "lng": "116.421516,",                               // 坐标纬度

            "address": "",                                      // 位置

            "distance": 200,                                    // 距离（m）*仅做排序使用属性

            "has_photos": 0,                                     // 是否有音乐 [type: boolean(0, 1)]
            "has_videos": 0,                                     // 是否有视频 [type: boolean(0, 1)]

            "has_commented_numbers": 100,                       // 评论数量 *可用作做排序使用的属性
            "has_liked_numbers": 100,                           // 点赞数量 *可用作排序使用的属性

            "reading_numbers": 100,                             // 阅读数量 *仅做排序使用的属性

            "details": ""                                       // 内容
        },

        // 图片对象
        "PHOTO": {
            "id": "",
            "name": "",                    // 名称
            "url": {
                "thumb": "",               // 缩略图
                "large": ""                // 原生图
            },

            "imageable_type": "article",   // 搜索的主题，默认为article *仅用于搜索时使用
            "imageable_id": ""             // 主题ID *仅用于搜索时使用
        }
    },

    "controller":
    {
        // 获取文章(s)
        "GET /v1/stadiums":
        {
            "request":
            {
                "page": "1",                          // *当前页数
                "per_page": "10",                     // *每页显示的数量

                "user_lat": "",                       // 用户坐标精度 *可选 排序、附近推荐可用
                "user_lng": "",                       // 用户坐标纬度 *可选 排序、附近推荐可用

                "s[attribute_name]": "<SORT_ORDER>",  // 排序
                "q[attribute_name]": ""               // 搜索
            },
            "response":
            {
                "data": ["{STADIUMS}"]
            }
        },

        // 获取文章
        "GET /v1/stadium/:id":
        {
            "request":
            {
            },
            "response":
            {
                "data": "{STADIUMS}"
            }
        }
    }
}
