{
    "meta":
    {
        "title"     : "Culture API",
        "output"    : "comment-api",
        "author"    : "Taylor",
        "source"    : "none",
        "prefix"    : ""
    },

  	"enum":
  	{
        // 积分任务对象类型
        "INTEGRAL_TASKS_TYPE": {
            "FIRST_TIME": 1, // 首次
            "EVERY_DAY": 2   // 每日
        }
  	},

    "model":
    {
        // 积分任务对象
        "INTEGRAL_TASKS": {
            "id": 0,
            "name": "",                          // 名称
            "type": "<INTEGRAL_TASKS_TYPE>",     // 任务类型
            "quantities": 100                    // 积分量
        },

        // 积分对象
        "INTEGRALS": {
            "id": 0,
            "name": "",                          // 名称
            "quantities": 100,                   // 积分量
            "created_at": "2017-08-01"           // 增加积分时间
        }
    },

    "controller":
    {
        // 获取积分任务(s) *token
        "GET /v1/integral_tasks":
        {
            "request":
            {
            },
            "response":
            {
                "data": "{INTEGRAL_TASKS}"
            }
        },

        // 获取用户积分记录(s) *token
        "GET /v1/user/integrals":
        {
            "request":
            {
            },
            "response":
            {
                "data": "{INTEGRALS}"
            }
        }
    }
}
