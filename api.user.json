{
    "meta":
    {
        "title"     : "Culture API",
        "output"    : "user-api",
        "author"    : "Taylor",
        "source"    : "none",
        "prefix"    : ""
    },

    "enum":
    {
        // 用户性别
        "GENDER": {
             "0": "保密",
             "1": "男",
             "2": "女"
        }
    },

    "model":
    {
        // 用户对象
        "USER": {
            "nickname": "",           // 用户昵称
            "avatar": "",             // 用户头像(URL)
            "integral_quantities": "",  // 积分
            "is_bind": "",            // 是否绑定 [type: boolean(0,1)]
            "is_identification": "",  // 是否认证 [type: boolean(0,1)]

            // 数量统计
            "numbers_count": {
                "order": 0,             // 订单总数量
                "order_wait_pay": 0,    // 订单待支付数量
                "order_paid": 0,        // 订单已预订数量
                "order_refunded": 0,    // 订单已退款数量
                "enshrine": 0,          // 收藏数量
                "comment": 0            // 评论数量
            },
            "token": ""                 // TOKEN
        }
    },

    "controller":
    {
        // 给用户发送验证码 (验证手机号是否存在)
        "POST /v1/user/code":
        {
            "request":
            {
                "mobile": "185****3124" // 用户手机号
            },
        
            "response":
            {
                "error_code"    : "<ERROR_CODE>",       // 错误代码
                "error_desc"    : "错误描述"             // 错误描述
            }
        },
        
        // 注册
        "POST /v1/user/register":
        {
            "request":
            {
                "mobile": "185****3124",          // 用户手机号
                "code": "132898",                 // 验证码
                "password": ""                    // 密码
            },

            "response":
            {
                "data": "{USER}"
            }
        },

        // 登录
        "POST /v1/user/login":
        {
            "request":
            {
                "mobile": "185****3124",          // 用户手机号
                "password": ""                    // 密码
            },

            "response":
            {
                "error_code"    : "<ERROR_CODE>",    // 错误代码
                "error_desc"    : "错误描述"          // 错误描述
            }
        },

        // 验证原始密码 *token_needed
        "POST /v1/user/check_original_password":
        {
            "request":
            {
                "original_password": "" // 密码
            },

            "response":
            {
                "error_code"    : "<ERROR_CODE>",    // 错误代码
                "error_desc"    : "错误描述"          // 错误描述
            }
        },

        // 获取用户 *token_needed
        "GET /v1/user" :
        {
            "request" :
            {
            },
            "response" :
            {
                "user": "{USER}"
            }
        },

        // 更改头像 *token_needed
        "POST /v1/user/avatar/update":
        {
            "request": {
                "photo": "" // 照片 文件二进制数据
            },
            "response":
            {
                "avatar": "" // 图片地址
            }
        },

        // 修改用户资料
        "POST /v1/user/profile/update":
        {
            "request": {
                "nickname": "" // 昵称
            },
            "response":
            {
                "error_code"    : "<ERROR_CODE>",       // 错误代码
                "error_desc"    : "错误描述"             // 错误描述
            }
        }
    }
}
