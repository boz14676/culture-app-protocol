{
    "meta":
    {
        "title"     : "Culture API",
        "output"    : "comment-api",
        "author"    : "Taylor",
        "source"    : "none",
        "prefix"    : ""
    },

  	"enum":
  	{
        // 主题类型
        "COMMENTABLE_TYPE": {
            "ARTICLE": "article",                        // 文章下面的评论
            "ACTIVITY": "activity",                      // 活动下面的评论
            "VIDEO": "video"                             // 视频下面的评论
        }
  	},

    "model":
    {
        // 用户对象
        "USER": {
            "nickname": "",           // 用户昵称
            "avatar": ""              // 用户头像(URL)
        },

        // 活动对象
        "COMMENT": {
            "id": 1,
            "original_user": "{USER}",                       // 用户对象
            "details": "",                                   // 内容
            "created_at": "",                                // 新增时间
            "has_liked_number": "",                          // 被赞数量

            "commentable_type": "<COMMENTABLE_TYPE>",    // 主题类型 *仅用于搜索时使用
            "commentable_id": ""                          // 主题ID *仅用于搜索时使用
        }
    },

    "controller":
    {
        // 获取主题【文章、预约、视频】的评论(s)
        "GET /v1/comments":
        {
            "request":
            {
                "page": "1",                             // *当前页数
                "per_page": "10",                        // *每页显示的数量
                "q[attribute_name]": "",                 // 搜索
                "s[attribute_name]": "<SORT_ORDER>"      // 排序
            },
            "response":
            {
                "data": ["{COMMENT}"]
            }
        },

        // 获取用户的评论(s) *token_needed
        "GET /v1/user/comments":
        {
            "request":
            {
                "page": "1",                             // *当前页数
                "per_page": "10"                         // *每页显示的数量
            },
            "response":
            {
                "data": ["{COMMENT}"]
            }
        }
    }
}
