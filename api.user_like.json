{
    "meta":
    {
        "title"     : "Culture API",
        "output"    : "user_like-api",
        "author"    : "Taylor",
        "source"    : "none",
        "prefix"    : ""
    },

  	"enum":
  	{
        // 主题类型
        "LIKESABLE_TYPE": {
            "ARTICLE": "article",                        // 文章
            "STADIUM": "stadium",                        // 文化场馆
            "ACTIVITY": "activity",                      // 活动
            "VIDEO": "video",                            // 视频
            "COMMENT": "comment"                         // 评论
        }

  	},

    "model":
    {
        // 用户对象
        "USER": {
            "nickname": "",           // 用户昵称
            "avatar": ""              // 用户头像(URL)
        },

        // 活动对象
        "LIKE": {
            "id": 1,
            "original_user": "{USER}",                      // 用户对象

            "likesable_type": "<COMMENTABLE_TYPE>",         // 主题类型 *仅用于搜索时使用
            "likesable_id": ""                              // 主题ID *仅用于搜索时使用
        }
    },

    "controller":
    {
        // 用户对主题（文章、预约、视频、评论）点赞 *token
        "POST /v1/user/like":
        {
            "request":
            {
                "likesable_type": "<COMMENTABLE_TYPE>",       // 主题类型
                "likesable_id": ""                            // 主题ID
            },
            "response":
            {
                "error_code"    : "<ERROR_CODE>",       // 错误代码
                "error_desc"    : "错误描述"             // 错误描述
            }
        },

        // 用户对主题（文章、预约、视频、评论）取消点赞 *token
        "DELETE /v1/user/like":
        {
            "request":
            {
                "likesable_type": "<COMMENTABLE_TYPE>",       // 主题类型
                "likesable_id": ""                            // 主题ID
            },
            "response":
            {
                "error_code"    : "<ERROR_CODE>",       // 错误代码
                "error_desc"    : "错误描述"             // 错误描述
            }
        },

        // 获取主题的点赞(s)
        "GET /v1/likes":
        {
            "request":
            {
                "page": "1",                             // *当前页数
                "per_page": "10",                        // *每页显示的数量
                "q[attribute_name]": "",                 // 搜索
                "s[attribute_name]": "<SORT_ORDER>"      // 排序
            },
            "response":
            {
                "data": ["{LIKE}"]
            }
        }
    }
}
