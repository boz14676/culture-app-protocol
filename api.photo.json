{
    "meta":
    {
        "title"     : "Culture API",
        "output"    : "article-api",
        "author"    : "Taylor",
        "source"    : "none",
        "prefix"    : ""
    },

  	"enum":
  	{
        // 排序方式
        "SORT_ORDER": {
            "ASC": "asc",   // asc
            "DESC": "desc"  // desc
        },

        // 主题类型
        "IMAGEABLE_TYPE": {
            "ARTICLE": "article",       // 文章
            "STADIUM": "stadium"        // 场馆
        }
  	},

    "model":
    {
        // 图片对象
        "PHOTO": {
            "id": "",
            "name": "",                                 // 名称
            "url": {
                "thumb": "",                            // 缩略图
                "large": ""                             // 原图
            }
        }
    },

    "controller":
    {
        // 获取图片(s)
        "GET /v1/photos":
        {
            "request":
            {
                "page": "1",                                   // *当前页数
                "per_page": "10",                              // *每页显示的数量

                "q[imageable_type]": "stadium",                // 主题类型 *仅用于搜索时使用
                "q[imageable_id]": "<IMAGEABLE_TYPE>"          // 主题ID *仅用于搜索时使用
            },
            "response":
            {
                "data": ["{PHOTO}"]
            }
        }
    }
}
