{
    "meta":
    {
        "title"     : "Culture API",
        "output"    : "article-api",
        "author"    : "Taylor",
        "source"    : "none",
        "prefix"    : ""
    },

  	"enum":
  	{
        // 排序方式
        "SORT_ORDER": {
            "ASC": "asc",   // asc
            "DESC": "desc"  // desc
        },

        // 文章列表展示类型
        "SHOWING_TYPE_LIST": {
            "ONE": 1,
            "TWO": 2,
            "THREE": 3,
            "FOUR": 4,
            "FIVE": 5,
            "SIX": 6,
            "SEVEN": 7,
            "EIGHT": 8
        },

        // 文章详情展示类型
        "SHOWING_TYPE_INFOR": {
            "ONE": 1,           // 介绍类型
            "TWO": 2,           // 场馆类型
            "THREE": 3,         // 预订类型
            "FOUR": 4           // 播放类型
        }

  	},

    "model":
    {
        // 文章分类 对象
        "ARTICLE_CATEGORY": {
            "id": 1,
            "topid": 0,                                     // 上级ID
            "showing_type_list": "<SHOWING_TYPE_LIST>",     // 文章列表展示类型
            "showing_type_infor": "<SHOWING_TYPE_INFOR>",   // 文章详情展示类型
            "name": "",                                     // 名称
            "icon": "",                                     // 图标
            "banner": "",                                   // banner
            "desc": "",                                     // 简介

            "is_music": 0,                                  // 是否有音乐 [type: boolean(0, 1)]
            "is_video": 0,                                  // 是否有视频 [type: boolean(0, 1)]
            "is_activity": 1,                               // 是否有预约 [type: boolean(0, 1)]

            "is_top_showing": 0                             // 是否展示在首页 [type: boolean(0, 1)] *仅用于首页展示使用
        },

        // 文化场馆 详情
        "VENUE_INFOR": {
            "opening_hours": "",  // 营业时间
            "contact": "",        // 联系方式
            "transport": ""       // 公共交通
        },

        // 文章 对象
        "ARTICLE": {
            "id": 1,
            "original_article_category": "{ARTICLE_CATEGORY}",  // 文章分类 对象
            "article_category_id": 1,                           // 文章分类ID
            "name": "",                                         // 名称（包含：姓名）
            "thumbnail": "",                                    // 缩略图（包含：大师头像）
            "banner": "",                                       // banner（包含：背景图）
            "photos": "",                                       // 图片（包含：藏品图片）
            "label": [],                                        // 标签

            "location": "116.421516,39.897224",                 // 坐标
            "address": "",                                      // 位置
            "desc": "",                                         // 用于：内容描述、专题简介、内容年代、主题、个人简介
            "client_timed_at": "",                              // 时间

            "activity_numbers": 2,                              // 活动数量

            "distance": 200,                                    // 距离（m）*仅做排序使用属性

            "is_hot": 0,                                        // 是否热门 [type: boolean(0, 1)] *仅做搜索使用的属性

            "is_activity": 1,                                   // 是否有预约 [type: boolean(0, 1)]
            "is_music": 0,                                      // 是否有音乐 [type: boolean(0, 1)]
            "is_video": 0,                                      // 是否有视频 [type: boolean(0, 1)]

            "has_commented_numbers": 100,                       // 评论数量 *可用作做排序使用的属性
            "has_liked_numbers": 100,                           // 点赞数量 *可用作排序使用的属性

            "reading_numbers": 100,                             // 阅读数量 *仅做排序使用的属性

            "is_guess": 0,                                      // 猜你喜欢 [type: boolean(0, 1)] *仅做搜索使用的属性

            "details": "",                                      // 内容

            "extra": "{VENUE_INFOR}|''"                         // 扩展字段 [type: mixed] *可用于文化场馆的详情信息
        },

        // 图片对象
        "PHOTO": {
            "id": "",
            "name": "",                    // 名称
            "url": {
                "thumb": "",               // 缩略图
                "large": ""                // 原生图
            },

            "imageable_type": "article",   // 搜索的主题，默认为article *仅用于搜索时使用
            "imageable_id": ""             // 主题ID *仅用于搜索时使用
        }
    },

    "controller":
    {
        // 获取文章分类(s)
        "GET /v1/article_categories":
        {
            "request":
            {
                "topid": 0,               // 上一级ID，没有为0
                "q[attribute_name]": "",  // 搜索
                "numbers": ""             // 显示数量，不传则返回全部
            },
            "response":
            {
                "data": ["{ARTICLE_CATEGORY}"]
            }
        },

        // 获取文章(s)
        "GET /v1/articles":
        {
            "request":
            {
                "page": "1",                          // *当前页数
                "per_page": "10",                     // *每页显示的数量
                "s[attribute_name]": "<SORT_ORDER>",  // 排序
                "q[attribute_name]": ""               // 搜索
            },
            "response":
            {
                "data": ["{ARTICLE}"]
            }
        },

        // 获取文章
        "GET /v1/article/:id":
        {
            "request":
            {
            },
            "response":
            {
                "data": "{ARTICLE}"
            }
        },

        // 获取热搜(s)
        "GET /v1/hotsearches":
        {
            "request":
            {
                "article_category_id": 1, // *文章分类ID
                "numbers": 6              // 显示数量（默认为6）
            },
            "response":
            {
                "data": ["{HOTSEARCH}"]
            }
        }
    }
}
