{
    "meta":
    {
        "title"     : "Culture API",
        "output"    : "article-api",
        "author"    : "Taylor",
        "source"    : "none",
        "prefix"    : ""
    },

  	"enum":
  	{
        // 排序方式
        "SORT_ORDER": {
            "ASC": "asc",   // asc
            "DESC": "desc"  // desc
        },

        // 文章分类 类型
        "ARTILCE_CATEGORY_TYPE": {
            "ONE": 1,
            "TWO": 2,
            "THREE": 3,
            "FOUR": 4,
            "FIVE": 5,
            "SIX": 6,
            "SEVEN": 7,
            "EIGHT": 8
        }

  	},

    "model":
    {
        // 文章分类 对象
        "ARTICLE_CATEGORY": {
            "id": 1,
            "topid": 0,                           // 上级ID
            "type": "<ARTILCE_CATEGORY_TYPE>",    // 类型
            "name": "",                           // 名称
            "desc": "",                           // 简介

            "is_top_showing": 0                   // 是否展示在首页 [type: boolean(0, 1)] *仅用于首页展示使用
        },

        // 文化场馆 详情
        "VENUE_INFOR": {
            "business_hours": "", // 营业时间
            "contact": "",        // 联系方式
            "transport": ""       // 公共交通
        },

        // 文章 对象
        "ARTICLE": {
            "id": 1,
            "article_category_id": 1,     // 文章分类ID
            "name": "",                   // 名称（包含：姓名）
            "thumbnail": "",              // 缩略图（包含：大师头像）
            "banner": "",                 // banner（包含：背景图）
            "photos": "",                 // 图片（包含：藏品图片）
            "label": [],                  // 标签
            "distance": 200,              // 距离（m）*可做排序使用属性
            "address": "",                // 位置
            "desc": "",                   // 用于：内容描述、专题简介、内容年代、主题、个人简介
            "client_timed_at": "",        // 时间

            "activity_numbers": 2,        // 活动数量

            "is_hot": 0,                  // 是否热门 [type: boolean(0, 1)] *仅做搜索使用的属性

            "comment_numbers": 100,       // 评论数量 *可用作做排序使用的属性
            "like_numbers": 100,          // 点赞数量 *可用作排序使用的属性

            "reading_numbers": 100,       // 阅读数量 *仅做排序使用的属性

            "is_guess": 0,                // 猜你喜欢 [type: boolean(0, 1)] *仅做搜索使用的属性

            "details": "",                // 内容

            "extra": "{VENUE_INFOR}|''"   // 扩展字段 [type: mixed] *可用于文化场馆的详情信息
        },

        // 图片对象
        "PHOTO": {
            "id": "",
            "name": "",                    // 名称
            "url": {
                "thumb": "",               // 缩略图
                "large": ""                // 原生图
            },

            "imageable_type": "article",   // 搜索的主题，默认为article *仅用于搜索时使用
            "imageable_id": ""             // 主题ID *仅用于搜索时使用
        }
    },

    "controller":
    {
        // 获取文章分类(s)
        "GET /v1/article_categories":
        {
            "request":
            {
                "topid": 0,               // 上一级ID，没有为0
                "q[attribute_name]": "",  // 搜索
                "numbers": ""             // 显示数量，不传则返回全部
            },
            "response":
            {
                "data": ["{ARTICLE_CATEGORY}"]
            }
        },

        // 获取文章(s)
        "GET /v1/articles":
        {
            "request":
            {
                "page": "1",                          // *当前页数
                "per_page": "10",                     // *每页显示的数量
                "s[attribute_name]": "<SORT_ORDER>",  // 排序
                "q[attribute_name]": ""               // 搜索
            },
            "response":
            {
                "data": ["{ARTICLE}"]
            }
        },

        // 获取文章
        "GET /v1/article/:id":
        {
            "request":
            {
            },
            "response":
            {
                "data": "{ARTICLE}"
            }
        },

        // 获取热搜(s)
        "GET /v1/hotsearches":
        {
            "request":
            {
                "article_category_id": 1, // *文章分类ID
                "numbers": 6              // 显示数量（默认为6）
            },
            "response":
            {
                "data": ["{HOTSEARCH}"]
            }
        }
    }
}
